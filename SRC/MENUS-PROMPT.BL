MENU.GO: 
	MENU.SCROLL.LR.SELECTED = 0	
	MENU.SELECTED = 0
	
MENU.LOOP1:
	FOR X = 1 TO MENU.ATTR(4)
		LOCATE X + MENU.ATTR(2)-1,MENU.ATTR(1)
		IF MENU.NDX <> X THEN COLOR VAL(CLR.MNU.FG.BAR$), VAL(CLR.MNU.BG.BAR$)
		IF MENU.NDX = X THEN COLOR VAL(CLR.MNU.FG.HL.BAR$), VAL(CLR.MNU.BG.HL.BAR$)
		PRINT MENU.TEXT$(X) ;
	NEXT
	
MENU.GET.KEYS:
	## VJ=JOY(0) -- NEED TO ADD JOYSTICK - TODO
	## GET TMPKB$ : MENU.KB.TMP.RET.VAL = ASC(TMPKB$)
	GOSUB KB.JOY.KEYS.GET : MENU.KB.TMP.RET.VAL = KBJOY.ASC
	SLEEP(4)
	IF MENU.KB.TMP.RET.VAL = 145 THEN MENU.NDX = MENU.NDX - 1 : GOTO MENU.PROCESS.KEY.UD
	IF MENU.KB.TMP.RET.VAL =  17  THEN MENU.NDX = MENU.NDX + 1 : GOTO MENU.PROCESS.KEY.UD
	IF (MENU.KB.TMP.RET.VAL = 29)  AND MENU.TYPE(MENU.NDX) = 1 THEN MENU.SCROLL.LR.SELECTED = 1 : RETURN
	IF (MENU.KB.TMP.RET.VAL = 157) AND MENU.TYPE(MENU.NDX) = 1 THEN MENU.SCROLL.LR.SELECTED = 2 : RETURN
	IF MENU.KB.TMP.RET.VAL =  13 THEN MENU.SELECTED = 1 : RETURN
	## JOYSTICK
	## IF VJ AND 4 THEN MENU.NDX = MENU.NDX + 1 : GOTO MENU.PROCESS.KEY.UD
	## IF VJ AND 8 THEN MENU.NDX = MENU.NDX - 1 : GOTO MENU.PROCESS.KEY.UD
	## IF (VJ AND 2) AND MENU.TYPE(MENU.NDX) = 1 THEN MENU.SCROLL.LR.SELECTED = 1 : RETURN
	## IF (VJ AND 1) AND MENU.TYPE(MENU.NDX) = 1 THEN MENU.SCROLL.LR.SELECTED = 2 : RETURN
	## IF VJ AND 16 THEN MENU.SELECTED = 1 : RETURN 
	GOTO MENU.GET.KEYS

MENU.PROCESS.KEY.UD:
	IF MENU.NDX = 0 THEN MENU.NDX = MENU.ATTR(4) 
	IF MENU.NDX = MENU.ATTR(4)+1 THEN MENU.NDX = 1 
	GOSUB MENU.CLEAR.KB
	GOTO MENU.LOOP1
	
MENU.CLEAR.KB:	
	GET TMPKB$ : IF LEN(TMPKB$) <> 0 GOTO MENU.CLEAR.KB	
	RETURN

MENU.CLEAR.VARS:
	FOR X23 = 1 TO 10 
		MENU.TEXT$(X23) = "" 
		MENU.TYPE(X23)  = 0 
	NEXT X23
	FOR X23 = 1 TO 4  : MENU.ATTR(X23) = 0 : NEXT X23
	RETURN

MENU.CLEAR.SCRN:
	COLOR VAL(CLR.MNU.FG.BAR$),VAL(CLR.MNU.BG.BAR$)
	FOR X23 = 1 TO MENU.ATTR(4)
		LOCATE X23 + MENU.ATTR(2) - 1,MENU.ATTR(1)
		PRINT RPT$(ASC(" "),MENU.ATTR(3))
	NEXT X23
	RETURN



