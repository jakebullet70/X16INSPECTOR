	RETURN

KB.JOY.KEYS.GET:
	## --- VARS - KBJOY.ASC, KB.STR$, KB.ATTR
	## --- VJ=JOY(0) - NEED TO ADD JOYSTICK - TODO
	GET KB.STR$ : KBJOY.ASC = ASC(KB.STR$)
	IF KBJOY.ASC <> 0 THEN RETURN
	GOTO KB.JOY.KEYS.GET
	

