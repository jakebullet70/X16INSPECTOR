LINE1110:
	SHOW.THE.MUGSHOT = 1 : GOSUB SETUP.PROMPT.SCREEN
	LOCATE 18,1
	
	 W = MENU.NDX
	 FOR X = 1 TO 5
		IF SUSPECTS$(X) = CURENT.SUSPECT$ THEN GOTO LINE1150
	 NEXT X
		
LINE1150:
	V = X 
	IF V = MURDERER.NAME.NDX GOTO LINE1180 : REM -- 1160 
	GOTO LINE1260 : REM -- 1170 

LINE1180:
	IF MURDERER.ROOM.NDX = W THEN GOTO LINE1200
	GOTO LINE1230

LINE1200:
	X = INT(RND(1) * 9 ) + 1
	GOSUB ROOM.SHOW.WHEN.TIME
	GOTO END.ROOM.QUESTION : REM GOTO LINE1020

LINE1230:
	IF RND(1)<.5 THEN GOTO LINE1260
	X = INT(RND(1) * 9) + 1
	IF RND(1)<.5 THEN GOSUB ROOM.SHOW.WHEN.TIME : GOTO END.ROOM.QUESTION : REM --GOTO LINE1020

LINE1260:
	X1=0  
	FOR X = 1 TO 9
		IF OZ(V,X)=W THEN GOSUB ROOM.SHOW.WHEN.TIME : X1=1
	NEXT X
	IF X1 = 0 THEN GOTO LINE1310
	GOTO END.ROOM.QUESTION : REM --GOTO LINE1020
 
LINE1310:
	PRINT"I WAS NEVER IN THE "ROOMS$(W)
	## GOTO LINE1020
	
END.ROOM.QUESTION:
	## SLEEP 120
	GOSUB KB.JOY.KEYS.GET : REM --- JUST WAIT FOR ANY KEY
	GOTO LINE1020

ROOM.SHOW.WHEN.TIME:
	PRINT "AT"X"{LEFT}'CLOCK I WAS IN THE "ROOMS$(W)
	RETURN
 
