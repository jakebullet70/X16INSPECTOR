## --- TIME

LINE1530:
	PRINT "WHEN DID THE MURDER HAPPEN ? ";:INPUT ZT
	REM -- 1540 
	A2=A2+1
	REM -- 1550 
	IF ZT = MURDERER.TIME THEN PRINT"{DOWN}FANTASTIC! THE MURDER TIME IS RIGHT!":L=L+1:GOTO LINE1570
