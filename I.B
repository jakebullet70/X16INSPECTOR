UPDATE.SOLVED.GUESS:
	PRINT RIGHT$(CLR.FGTEXT.NORMAL$,LEN(CLR.FGTEXT.NORMAL$)-2)
	LOCATE 27,3 : PRINT "YOUR SUSPECT IS {RVS ON}"SUSPECTS$(PICKED.SUSPECT)"{RVS OFF}  ";
	LOCATE 28,3 : PRINT "IN THE {RVS ON}"ROOMS$(PICKED.ROOM)"{RVS OFF} AT {RVS ON}"RIGHT$(STR$(PICKED.TIME),1)"'CLOCK{RVS OFF}   ";
	
	RETURN
	
UPDATE.SOLVED.GUESS.CHANGE.SUSPECT:
	IF MENU.SCROLL.LR.SELECTED = 1 THEN PICKED.SUSPECT = PICKED.SUSPECT + 1 
	IF MENU.SCROLL.LR.SELECTED = 2 THEN PICKED.SUSPECT = PICKED.SUSPECT - 1
	IF PICKED.SUSPECT > 5 THEN PICKED.SUSPECT = 1 
	IF PICKED.SUSPECT < 1 THEN PICKED.SUSPECT = 5
	GOSUB SHOW.MUGSHOT
	RETURN
	
UPDATE.SOLVED.GUESS.CHANGE.ROOM:
	IF MENU.SCROLL.LR.SELECTED = 1 THEN PICKED.ROOM = PICKED.ROOM + 1 
	IF MENU.SCROLL.LR.SELECTED = 2 THEN PICKED.ROOM = PICKED.ROOM - 1
	IF PICKED.ROOM > 6 THEN PICKED.ROOM = 1 
	IF PICKED.ROOM < 1 THEN PICKED.ROOM = 6
	RETURN
	
UPDATE.SOLVED.GUESS.CHANGE.TIME:
	IF MENU.SCROLL.LR.SELECTED = 1 THEN PICKED.TIME = PICKED.TIME + 1 
	IF MENU.SCROLL.LR.SELECTED = 2 THEN PICKED.TIME = PICKED.TIME - 1
	IF PICKED.TIME > 9 THEN PICKED.TIME = 1 
	IF PICKED.TIME < 1 THEN PICKED.TIME = 9
	RETURN
 
SOLVE.CASE.NOW:
	SHOW.THE.MUGSHOT = 1 : GOSUB SETUP.PROMPT.SCREEN
	PICKED.SUSPECT = 1 : PICKED.ROOM = 1 : PICKED.TIME = 1 
	PRINT RIGHT$(CLR.FGTEXT.NORMAL$,LEN(CLR.FGTEXT.NORMAL$)-2)
	LOCATE 17,3 : PRINT "INSPECTOR, ARE YOU SAYING"
	LOCATE 18,3 : PRINT "YOU SOLVED THIS CASE?"
			
	## --- START OF MENU LOOP
	GOSUB MENU.SOLVED.INIT
	GOSUB UPDATE.SOLVED.GUESS
	SOLVED.SCAN.START:
		GOSUB MENU.SOLVED.RUN
		IF MENU.NDX = 1 AND MENU.SCROLL.LR.SELECTED > 0 THEN GOSUB UPDATE.SOLVED.GUESS.CHANGE.SUSPECT
		IF MENU.NDX = 2 AND MENU.SCROLL.LR.SELECTED > 0 THEN GOSUB UPDATE.SOLVED.GUESS.CHANGE.TIME
		IF MENU.NDX = 3 AND MENU.SCROLL.LR.SELECTED > 0 THEN GOSUB UPDATE.SOLVED.GUESS.CHANGE.ROOM
		IF MENU.NDX = 4 THEN GOTO CHECK.FOR.SOLVED.CASE
		IF MENU.NDX = 5 THEN GOTO SHOW.SOLVED.CASE
		IF MENU.NDX = 6 THEN GOTO START.QUESTIONS : REM --- EXIT MENU, BACK TO START
		GOSUB UPDATE.SOLVED.GUESS
		GOTO SOLVED.SCAN.START
	SALVED.SCAN.END:
	
	
