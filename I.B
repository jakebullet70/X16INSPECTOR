QUESTIONS.ROOM:
	GOSUB LINE1820.SOUND
	SHOW.THE.MUGSHOT = 1 : GOSUB SETUP.PROMPT.SCREEN
	LOCATE 17,3 :PRINT CURENT.SUSPECT$ ", WHEN WERE YOU IN THE..."
	GOSUB MENU.QUESTONS.ROOMS.INIT : GOSUB MENU.QUESTONS.ROOMS.RUN
	
	## IF MENU.NDX = 7 THEN GOTO SOLVE.CASE.NOW	
	## PRINT CURENT.SUSPECT$", WHEN WERE YOU IN ROOM - "; : INPUT R$: PRINT : A1 = A1 + 1
