DIM OZ(5,9) : DIM SUSPECTS$(5) : DIM ROOMS$(6)
SUSPECTS$(1)="JOHN":SUSPECTS$(2)="STACY":SUSPECTS$(3)="BILL": SUSPECTS$(4)="ANDY":SUSPECTS$(5)="SUZY"
ROOMS$(1)="GARAGE":ROOMS$(2)="CLOSET":ROOMS$(3)="OFFICE": ROOMS$(4)="KITCHEN":ROOMS$(5)="LIBRARY":ROOMS$(6)="BASEMENT"

START:

	COLOR VAL(CLR.FGTEXT.NORMAL$),VAL(CLR.BACKGROUND$) : SCREEN 3 
	GOSUB DRAW.INTRO.SCREEN
	CLS : GOSUB DRAW.DIAGRAM
	
	FOR X = 1 TO 5
		OZ(X,1)=INT(6*RND(1))+1
	NEXT X

	FOR X = 2 TO 9
		FOR Y = 1 TO 5
			LINE450: 
			A=INT(6*RND(1))+1
			IF A = OZ(Y,X-1) THEN GOTO LINE450
			OZ(Y,X) = A
		NEXT Y
	NEXT X

	MURDERER.NAME.NDX = INT(5 * RND(1))+1
	MURDERER.TIME = INT(9 * RND(1))+1
	MURDERER.ROOM.NDX = OZ(MURDERER.NAME.NDX,MURDERER.TIME)
	IF MURDERER.NAME.NDX = 1 THEN GOTO LINE580

	FOR X = 1 TO MURDERER.NAME.NDX - 1
		LINE550:
		IF OZ(X,MURDERER.TIME)=MURDERER.ROOM.NDX THEN OZ(X,MURDERER.TIME) = INT(5*RND(1)) + 1: GOTO LINE550
	NEXT X
	IF MURDERER.NAME.NDX = 5 THEN GOTO START.QUESTIONS

LINE580:
  FOR X = MURDERER.NAME.NDX + 1 TO 5
	LINE590:
	IF OZ(X,MURDERER.TIME)=MURDERER.ROOM.NDX THEN OZ(X,MURDERER.TIME)=INT(5*RND(1))+1:GOTO LINE590
  NEXT X
 
  
START.QUESTIONS:
	SHOW.THE.MUGSHOT = 1 : GOSUB SETUP.PROMPT.SCREEN
	IF DEBUG = 1 THEN GOSUB DEBUG.SHOW
	LOCATE 16,3 
	PRINT "QUESTION SOMEONE OR SOLVE THE CASE?"; :
	
	GOSUB MENU.SUSPECTS.INIT : GOSUB MENU.SUSPECTS.RUN
	
	IF MENU.NDX = 6 THEN GOTO SOLVE.CASE.NOW
	CURENT.SUSPECT$ = SUSPECTS$(MENU.NDX) 
	
	## PRINT"NEXT INTERVIEW ? ";:INPUT CURENT.SUSPECT$
	## FOR X = 1 TO 5
	##	IF CURENT.SUSPECT$ = SUSPECTS$(X) THEN GOTO QUESTION.TIME.OR.PLACE
	## NEXT X
	## PRINT CURENT.SUSPECT$" BUT HE WASN'T THERE!": SLEEP 30 : REM NEXT X
	## GOSUB CLEAR.PROMPT.SCREEN : GOTO START.QUESTIONS
  
 
QUESTION.TIME.OR.PLACE:
	V = MENU.NDX : REM V = SUSPECT ARRAY # - i THINK?
	SHOW.THE.MUGSHOT = 0 : GOSUB SETUP.PROMPT.SCREEN
	LOCATE 16,3 
	PRINT RIGHT$(CLR.FGTEXT.NORMAL$,LEN(CLR.FGTEXT.NORMAL$)-2) ; "WHAT DO YOU WANT TO ASK " CURENT.SUSPECT$ "?"; 
	GOSUB MENU.QUESTONS.TYPE.INIT : GOSUB MENU.QUESTONS.TYPE.RUN
	IF MENU.NDX = 3 THEN GOTO START.QUESTIONS
	ON MENU.NDX GOTO QUESTION.TIME,QUESTIONS.ROOM
  

## =========================================================================


QUESTION.TIME:
	SHOW.THE.MUGSHOT = 1 : GOSUB SETUP.PROMPT.SCREEN
	LOCATE 16,3 : PRINT "WHERE WERE YOU AT {RVS ON}  1  {RVS OFF}'O CLOCK?"; :
	## PRINT CURENT.SUSPECT$"...  WHERE WERE THEY AT (TIME) ";: INPUT ZT: PRINT : A1 = A1 + 1
		
	TIME.OF.MURDER = 1
	
	## --- START OF LOOP
	KB.SCAN.START:
		GOSUB KB.JOY.KEYS.GET
		IF KBJOY.ASC = 29 OR KBJOY.ASC = 145 THEN TIME.OF.MURDER = TIME.OF.MURDER + 1 : GOSUB QUESTION.TIME.VALID.TIME : GOTO KB.SCAN.START
		IF KBJOY.ASC = 157 OR KBJOY.ASC = 17 THEN TIME.OF.MURDER = TIME.OF.MURDER - 1 : GOSUB QUESTION.TIME.VALID.TIME : GOTO KB.SCAN.START
		IF KBJOY.ASC = 13 THEN GOTO KB.SCAN.END : 	REM --- EXIT LOOP
		GOTO KB.SCAN.START : REM --- DO THE LOOP AGAIN
	KB.SCAN.END:
	
	IF V = MURDERER.NAME.NDX THEN GOTO LINE870 : REM--- THIS IS THE MURDERER! SO HE MIGHT LIE TO YOU!
	GOTO LINE890
	
QUESTION.TIME.VALID.TIME:	
	IF TIME.OF.MURDER < 1 THEN TIME.OF.MURDER = 1  
	IF TIME.OF.MURDER > 9 THEN TIME.OF.MURDER = 9
	LOCATE 16,22 : PRINT RIGHT$(CLR.FGTEXT.NORMAL$,LEN(CLR.FGTEXT.NORMAL$)-2) ; "{RVS ON}"  TIME.OF.MURDER  "{RVS OFF}"; 
	RETURN

LINE870:
	IF RND(1) < .5 THEN GOTO LINE890
	LU = INT(5 * RND(1)) + 1 : GOTO QUESTION.TIME.ANSWER
	
LINE890:
	LU = OZ(V,TIME.OF.MURDER)
		
		
QUESTION.TIME.ANSWER:
	SHOW.THE.MUGSHOT = 1 : GOSUB SETUP.PROMPT.SCREEN
	## GOSUB CLEAR.PROMPT.SCREEN : GOSUB SHOW.MUGSHOT : GOSUB KB.BUFFER.CLEAR
	LOCATE 17,3 
	PRINT CURENT.SUSPECT$ ", AT" TIME.OF.MURDER "'CLOCK"
	LOCATE 19,1
	PRINT "I WAS IN THE " ROOMS$(LU)
	IF RND(1) > .2 THEN GOTO LINE940
	IF TIME.OF.MURDER > MURDERER.TIME THEN PRINT "BY THEN MR KIM WAS ALREADY DEAD!" : GOTO LINE940 
	PRINT "BY THEN MR KIM WAS STILL ALIVE!"	
	

LINE940:
	REM -- 940 
	REM --- WITHOUT THE USE OF BUGLINE VAR WE ARE GETTING A LF BETWEEN PRINT STATMENTS
	BUGLINE = 22 
	FOR X = 1 TO 5
		IF X = V THEN GOTO LINE970
		IF OZ(X,TIME.OF.MURDER) = LU THEN GOSUB TIME.SHOW.INFO.ALSO
		## ------ IF OZ(X,TIME.OF.MURDER) = LU THEN PRINT ""SUSPECTS$(X) " WAS ALSO THERE"
		LINE970:
	NEXT X

	REM -- 980 
	REM --- WITHOUT THE USE OF BUGLINE VAR WE ARE GETTING A LF BETWEEN PRINT STATMENTS
	FOR X = 1 TO 5
		IF V = X THEN GOTO LINE1010
		IF (OZ(X,TIME.OF.MURDER) = LU-1) OR (OZ(X,TIME.OF.MURDER) = LU + 1) THEN GOSUB TIME.SHOW.INFO.ALSO
		## ----- IF (OZ(X,TIME.OF.MURDER) = LU-1) OR (OZ(X,TIME.OF.MURDER) = LU + 1) THEN PRINT ""SUSPECTS$(X)" WAS ALSO THERE" 
		LINE1010:
	NEXT X

	## SLEEP 120
	GOSUB KB.JOY.KEYS.GET : REM --- JUST WAIT FOR ANY KEY

LINE1020:
	GOSUB LINE1820.SOUND
	GOTO START.QUESTIONS	
	
TIME.SHOW.INFO.ALSO:
	REM --- WITHOUT THE USE OF BUGLINE VAR WE ARE GETTING A LF BETWEEN PRINT STATMENTS
	LOCATE BUGLINE,1
	PRINT SUSPECTS$(X)" WAS ALSO THERE" 
	BUGLINE=BUGLINE+1
	RETURN

		

