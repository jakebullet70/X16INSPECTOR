	## ON X GOTO LINE1440,LINE1530,LINE1610,LINE1750



## MURDER	
LINE1440:
	A2 = A2 + 1
	IF V = MURDERER.NAME.NDX THEN GOTO LINE1470
	## PRINT"UNFORTUNATELY,"SUSPECTS$(V)"NOT THE MURDERER!" : GOTO LINE1490
		
LINE1470:
